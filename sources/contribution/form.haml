#crp_fields
  %label{:for => 'industry_name'} Industry:
  %input{:type => 'text', :id => 'industry_name'}
  %h5 Enter an asterisk (*) to list all industries.
  #crp_fields_chosen{:style => "display: none"}
    %h3 Selected Industries
    
%script{:type => 'text/javascript'}
  :plain
    $(document).ready(function() {
      $('#industry_name').autocomplete('/industries', {
        formatItem: function(row) {
          return row[0];
        },
        formatResult: function(row) {
          return row[0];
        },
        max: 50
      }).result(function(event, data) {
        $('#crp_fields_chosen').append(
          '<div class="crp_chosen">' +
            data[0] + ' ' +
            '<input type="checkbox" name="contribution[' + data[0] + ']" value="1" checked="checked" />' +
          '</div>'
        );
        $('#industry_name').val('');
        $('#crp_fields_chosen').show();
      });
    });