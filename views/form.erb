<div class="source_form popup" id="<%= source.keyword %>">
  <h2><%= source.name %></h2>
  <%= erb :"../sources/#{source.keyword}/form", 
    :layout => false, 
    :locals => {:source => source}.merge(options) 
  %>
  
  <h6>
    Source: <a href="<%= source.source_url %>"><%= source.source_name %></a>
  </h6>
  <script type='text/javascript'>
    init_source_form('<%= source.keyword %>');
  </script>
</div>